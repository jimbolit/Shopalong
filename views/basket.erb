

	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">	
        <link rel="stylesheet" href="/styles_checkout.css">
        <link rel="stylesheet" type="text/css" href="/styles.css"/>
	</head>

	<body>
		
    <h2> <%=@basket%> </h2>
    <h2> <%=@basket_ids%> </h2>
    <h2> product hash <%= @basket.find{|y| y[:product_id] == "1"}[:order_quantity] %></h2>

        <div class="container-fluid breadcrumbBox text-center">
			<ol class="breadcrumb d-flex justify-content-center">
				<li class="active"><a href="#">Review</a></li>
				<li ><a href="#">Delivery Details</a></li>
				<li><a href="#">Payment</a></li>
			</ol>
		</div>
		
		<div class="container text-center">
            <div class="row cart-row">
                <div class="col-sm-5">
                    <div class="bigcart"></div>
                    <h1>Your shopping cart</h1>
                    <p>
                        Please review your cart, and when your happy, press the Continue button. Don't worry, you can still come back if you change your mind
                    </p>
                </div>

                <div class="col-sm-7 text-left">
                    <ul>
                        <li class="row product-row list-inline columnCaptions d-flex flex-row">
                            <span>QTY</span>
                            <span>ITEM</span>
                            <span>Price</span>
                        </li>

                        <% for products in @products %>
                        <% quantity = @basket.find{|y| y[:product_id] == products[:id].to_s}[:order_quantity]%>
                        
                        <li class="row product-row d-flex flex-row">
                            <span class="quantity"><%= quantity %></span>
                            <span class="itemName"> <%=products[:name]%></span>
                            <span class="price">$<%= "%.2f" %  (products[:price] * quantity.to_i) %></span>
                            <span class="popbtn"><a class="arrow"></a></span>
                        </li>
                        
                        <%end%>
                        
                        <li class="row totals">
                            <span class="itemName">Total:</span>
                            <span class="price">$1694.43</span>
                            <span class="order"> <a class="text-center">Continue</a></span>
					    </li>
                    </ul>
                </div>
            </div>
		</div>

		<!-- The popover content -->

		<div id="popover" style="display: none">
			<a href="#"><span class="glyphicon glyphicon-pencil"></span></a>
			<a href="#"><span class="glyphicon glyphicon-remove"></span></a>
		</div>
		
		<!-- JavaScript includes -->
		<script src="/bootstrap.min.js"></script>
		<script src="/customjs.js"></script>

	</body>
 